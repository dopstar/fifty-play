<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:stretchColumns="*"
    android:layout_height="wrap_content">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:stretchColumns="*"
        android:id="@+id/instructions"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/instructions"
                android:layout_column="0" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Step 1 of 8" android:id="@+id/step"
        android:visibility="gone"
        android:layout_column="0" />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:stretchColumns="*"
        android:visibility="gone"
        android:id="@+id/card"
        android:layout_height="wrap_content">

    <View android:layout_height="0.4dip" android:background="#555555" />
    <TableRow>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="1"
            android:id="@+id/textView0" android:layout_column="0"
            android:gravity="center"
            android:height="50dip" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="4"
            android:id="@+id/textView1" android:layout_column="1"
            android:background="#111111" android:gravity="center"
            android:height="50dip" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="6"
            android:id="@+id/textView2" android:layout_column="2"
            android:gravity="center" android:height="50dip" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="9"
            android:id="@+id/textView3" android:layout_column="3"
            android:background="#111111" android:gravity="center" android:height="50dip" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="12"
            android:id="@+id/textView4" android:layout_column="4"
            android:gravity="center" android:height="50dip" />
    </TableRow>
    <View android:layout_height="0.4dip" android:background="#555555" />
    <TableRow>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="14"
             android:layout_column="0" android:id="@+id/textView5"
            android:gravity="center"
            android:height="50dip" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="17"
            android:layout_column="1" android:id="@+id/textView6"
            android:height="50dip"
            android:background="#111111" android:gravity="center" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="19"
            android:layout_column="2" android:height="50dip" android:id="@+id/textView7"
            android:gravity="center" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="22"
            android:layout_column="3" android:height="50dip" android:id="@+id/textView8"
            android:background="#111111" android:gravity="center" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="25"
            android:layout_column="4" android:height="50dip" android:id="@+id/textView9"
            android:gravity="center" />
    </TableRow>
    <View android:layout_height="0.4dip" android:background="#555555" />
    <TableRow android:textAlignment="center">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="27"
            android:layout_column="0" android:id="@+id/textView10"
            android:gravity="center"
            android:height="50dip" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="30"
            android:layout_column="1" android:height="50dip" android:id="@+id/textView11"
            android:background="#111111" android:gravity="center" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="33"
            android:layout_column="2" android:height="50dip" android:id="@+id/textView12"
            android:gravity="center" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="35"
            android:layout_column="3" android:height="50dip" android:id="@+id/textView13"
            android:background="#111111" android:gravity="center" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="38"
            android:layout_column="4" android:height="50dip" android:id="@+id/textView14"
            android:gravity="center" />
    </TableRow>
    <View android:layout_height="0.4dip" android:background="#555555" />
    <TableRow>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="40"
            android:layout_column="0" android:id="@+id/textView15"
            android:gravity="center"
            android:height="50dip" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="43"
            android:layout_column="1" android:height="50dip" android:id="@+id/textView16"
            android:background="#111111" android:gravity="center" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="46"
            android:layout_column="2" android:height="50dip" android:id="@+id/textView17"
            android:gravity="center" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="48"
            android:layout_column="3" android:height="50dip" android:id="@+id/textView18"
            android:background="#111111" android:gravity="center" />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge" android:text="51"
            android:layout_column="4" android:height="50dip" android:id="@+id/textView19"
            android:gravity="center" />
    </TableRow>
    <View android:layout_height="0.4dip" android:background="#555555" />
</TableLayout>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:stretchColumns="*"
android:layout_height="wrap_content">
    <TableRow
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Is your number above?"
            android:id="@+id/confirm"
            android:visibility="gone"
            android:layout_column="0" />
    </TableRow>
</TableLayout>

    <TableRow
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:id="@+id/YesNoButtons"
        android:layout_height="fill_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/yes_button"
            android:id="@+id/YesButton"
            android:layout_column="0"
            android:background="@android:color/holo_blue_light"
        />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_button"
            android:id="@+id/NoButton"
            android:layout_column="20"
            android:background="@android:color/holo_blue_light"
            />
    </TableRow>


    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:layout_width="match_parent"
                 android:id="@+id/startPlaying"
                 android:stretchColumns="*"
                 android:layout_height="wrap_content">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/start_playing"
                android:id="@+id/StartButton"
                android:layout_column="0"
                android:background="@android:color/holo_blue_light"
                />
        </TableRow>
    </TableLayout>
</TableLayout>